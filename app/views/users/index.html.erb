<div class="user-header"><%= "SHOUTHAUS" %></div>
<ul>
    <%  @user.each do |user| %>
        <li><h3><%= link_to user.username, user_shouts_path(user) %></h3>
          <% if current_user.follows?(user)%>
          <%= link_to "Unfollow", user_follow_path(user), method: :delete %>
          <% else %>
          <%= link_to "Follow", user_follow_path(user) %>
          <% end %>
          <%= link_to "Delete User", user_path(user), method: :delete %>
          
    <%  end  %>
</ul>

<%= link_to 'Sign In', new_user_session_path%>
