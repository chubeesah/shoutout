<h1>SHOUTS</h1>

<table>
  <thead>
    <tr>
      <th>Yells</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.shouts.each do |shouts| %>
      <tr>
        <td><%= shouts.yell %></td>
        <br>
        <td><%= link_to 'Edit', edit_user_shout_path(@user, shouts) %></td>
        <td><%= link_to 'Delete', user_shout_path(@user, shouts), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New SHOUTS', new_user_shout_path(@user)  %>
<%= console %>