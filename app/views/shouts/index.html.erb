<h1><%= @user.username.upcase %>'S SHOUTS</h1>

<table>
  <thead>
    <tr>
      <h3><th>YELLS!:<br><br><br></th></h3>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @user.shouts.each do |shouts| %>
      <tr>
        <td><%= shouts.yell %></td>
        <td><h6><%= link_to 'Edit', edit_user_shout_path(@user, shouts) %></h6></td>
        <td><h6><%= link_to 'Delete', user_shout_path(@user, shouts), method: :delete %></h6></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
    <% @user.followers.each do |x| %>
        <b><%= "Followers:" %></b>
        <%= x.username %>
        <% end %>
<%= link_to 'Back', :root %> | <%= link_to 'New SHOUTS', new_user_shout_path(@user)  %>
<%= console %>